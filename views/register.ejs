<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/javascripts/moment.min.js"></script>
    <script src="/javascripts/underscore.min.js"></script>
    <script src="/javascripts/clndr.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/register.css"/>

  </head>
  <body class="bg-hope font-sans">
    <% include ./navbar %>
    <div class="bg-white registration">
      <br>
      <div class="text-center text-3xl text-hope">Select a day from the calendar</div>
      <br>
      <div class="calendar-cont"></div>
      <!-- THIS IS CUSTOM TEMPLATE FOR CLNDR.JS -->
      <script id="calendar-template" type="text/template">
        <div class="clndr-cont" id="clndr-cont">
          <div class="clndr-controls">
            <div class="clndr-previous-button material-icons">chevron_left</div>
            <div class="month">{{ month }} {{ year }}</div>
            <div class="clndr-next-button material-icons">chevron_right</div>
          </div>
          <div class="clndr-grid">
            <div class="days-of-the-week">
              <div class="header-cont">
                {% _.each(daysOfTheWeek, function (day) { %}
                  <div class="header-day">{{ day }}</div>
                {% }) %}
              </div>
              <div class="days">
              {% _.each(days, function (day) { %}
                <div class="{{ day.classes }}">
                  <div class="day-inner">{{ day.day }}</div>
                </div>
              {% }) %}
              </div>
            </div>
          </div>
        </div>
      </script>
      <br>
      <!-- THIS WILL SHOW THE TIME SLOTS -->
      <div id="time-slots" class="hidden">
        <div class="text-center text-3xl text-hope">Select a time for <span id="selected-date"></span></div>
        <br>
        <div class="flex mx-auto w-3/4" style="flex-wrap: wrap;">
          <% ['9:00am-10:30am', '10:30am-12:00pm', "12:00pm-1:30pm", "1:30pm-3:00pm", "3:00pm-4:30pm"].forEach((time, index) => { %>
            <div style="flex-basis: calc(100%/3); text-align: center;" class="my-2">
              <button disabled class="disabled-time bg-white hover:bg-hope text-hope font-semibold hover:text-white py-3 px-6 border border-hope hover:border-transparent text-lg w-64 time-slot" data-value="<%=time%>" data-index="<%=index%>">
                <%=time%>
              </button>
            </div>
          <% }) %>
        </div>
        <br>
        <br>
      </div>
      <!-- THIS IS THE FORM FOR CONTACT INFO -->
      <div class="w-1/2 mx-auto">
        <form class="w-full">
          <!-- PRIMARY CONTACT -->
          <div class="hidden" id="primary-contact">
            <div class="text-center text-3xl text-hope">Enter Your Contact Info</div>
            <br>
            <div class="w-full flex">
              <div class="w-1/2 px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                  First Name
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-first-name" type="text" placeholder="Enter First Name" name="firstName">
              </div>
              <div class="w-1/2 px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                  Last Name
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="text" placeholder="Enter Last Name" name="lastName">
              </div>
            </div>
            <br>
            <div class="w-full">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Phone Number
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password" type="text" placeholder="Enter Phone Number" name="phoneNumber">
              </div>
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Email Address <span>(optional)</span>
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password" type="text" placeholder="Enter Email Address (optional)" name="emailAddress">
              </div>
              <label class="text-gray-700 px-3">
                <input class="mr-2 leading-tight" type="checkbox" id="companions">
                <span class="text-sm">
                  I am not shopping alone
                </span>
              </label>
            </div>
          </div>
          <br>

          <!-- COMPANIONS RECORD -->
          <div class="w-full hidden" id="companion-records">
            <div class="text-center text-3xl text-hope">Add Companion(s) Info</div>
            <br>
            <div class="w-full px-3">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
                Select Number of Companions
              </label>
              <select class="block bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                <!-- ADD NUMBER OF COMPANIONS HERE -->
              </select>
            </div>
            <div id="companion-form">
              <!--add companion forms here-->
            </div>
          </div>
          <br>
          <div class="flex px-3 justify-end hidden" id="buttons-cont">
            <button class="bg-transparent hover:bg-hope text-hope font-semibold hover:text-white py-2 px-4 border border-hope hover:border-transparent rounded mr-3">
              SUBMIT
            </button>
            <button class="bg-transparent hover:bg-gray-700 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-700 hover:border-transparent rounded">
              CANCEL
            </button>
          </div>
        </form>   
        <br>     
      </div>
    </div>
  </body>
  <script type="text/javascript" src="/javascripts/register.js"></script>
</html>
